<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="wiz_vendor_statement_view" model="ir.ui.view">
		<field name="name">wiz_total_size_product_report_view</field>
		<field name="model">vendor.statement</field>
		<field name="arch" type="xml">
			<form>
				  
				<group col="4">
					<field name="date_from" />
					<field name="date_to" />
				</group>
				<group>
				   <field name="vendor"/>
				</group>
				 
				<footer>
					<button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight" />
					or
					<button string="Cancel" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="action_vendor_statment_view_wizard" model="ir.actions.act_window">
		<field name="name"> كشــف حســاب مــورد</field>
		<field name="res_model">vendor.statement</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="wiz_vendor_statement_view"/>
		<!--<field name="target">new</field>-->
		<field name="target">inline</field>
	</record>

	 <menuitem id="menu_vendor_statement_report"
                  name="كشـــف حســــاب مـــورد"
                  action="action_vendor_statment_view_wizard"
                  parent="sale.menu_sale_report"
                  sequence="1"/>

</odoo>
